{
  "version":  1,
  "disable_existing_loggers": false,
  "formatters": {
    "simple": {
      "format": "%(asctime)s - %(levelname)s - %(message)s"
    },
    "detailed": {
      "format": "%(asctime)s - %(levelname)s - %(message)s - %(filename)s:%(lineno)d"
    }
  },
  "handlers": {
    "console": {
      "class": "logging.StreamHandler",
      "level": "DEBUG",
      "formatter": "detailed",
      "stream": "ext://sys.stdout"
    },
    "file": {
      "class": "logging.FileHandler",
      "level": "INFO",
      "formatter": "detailed",
      "filename": "app.log"
    },
  }
}